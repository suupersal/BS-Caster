<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hexisland"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
     <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="20" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.gutierrez.salvador.bscaster.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
          
            android:name="com.gutierrez.salvador.bscaster.HostLobbyActivity"
            android:label="@string/title_activity_select_cast" 
            android:windowSoftInputMode="stateHidden"
            >
        </activity>
        <activity
           
            android:name="com.gutierrez.salvador.bscaster.JoinLobbyActiviy"
            android:label="@string/title_activity_join_game_activiy"
            android:windowSoftInputMode="stateHidden"
             >
        </activity>
       
        <activity
           
            android:name="com.gutierrez.salvador.bscaster.GameActivity"
            android:label="@string/title_activity_game"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize" >
        </activity>
        <activity
            
            android:name="com.gutierrez.salvador.bscaster.GameActivityGuest"
            android:label="@string/title_activity_game_activity_guest" 
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize">
        </activity>
        <activity
            
            android:name="com.gutierrez.salvador.bscaster.GameActivityHost"
            android:label="@string/title_activity_game_activity_host"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize" >
        </activity>
    </application>

</manifest>
